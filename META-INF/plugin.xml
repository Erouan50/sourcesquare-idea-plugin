<idea-plugin version="2">
  <name>Source Square Plugin</name>
  <description>Source Square plugin to find open source files</description>
  <version>1.0</version>
  <vendor>Erouan</vendor>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->

      <action id="SourceSquarePlugin.ScanAction" class="com.erouan.sourcesquare.plugin.ScanAction"
              text="Source Square Scan porject" description="Scan the project to find open source files">
          <add-to-group group-id="ToolsMenu" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>